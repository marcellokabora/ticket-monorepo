{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "composite": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/types/**/*.d.ts"
    ],
    "exclude": [
        "src/**/*.spec.ts",
        "src/**/*.test.ts"
    ]
}