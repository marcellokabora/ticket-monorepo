{
    "name": "ticket-monorepo",
    "version": "0.0.1",
    "private": true,
    "type": "module",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "turbo run dev",
        "dev:server": "node servers/dev-server.js",
        "dev:booking": "turbo run dev --filter=@ticketapp/booking",
        "dev:dashboard": "turbo run dev --filter=@ticketapp/dashboard",
        "dev:homepage": "turbo run dev --filter=@ticketapp/homepage",
        "storybook": "pnpm --filter @ticketapp/ui storybook",
        "figma:publish": "pnpm --filter @ticketapp/ui figma:publish",
        "build": "turbo run build",
        "build:apps": "turbo run build --filter=./apps/*",
        "build:packages": "turbo run build --filter=./packages/*",
        "lint": "turbo run lint",
        "test": "turbo run test",
        "type-check": "turbo run type-check",
        "clean": "turbo run clean && rimraf node_modules"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^2.1.1",
        "@eslint/js": "^9.8.0",
        "@sveltejs/adapter-auto": "^3.2.0",
        "@sveltejs/adapter-static": "^3.0.10",
        "@sveltejs/kit": "^2.48.0",
        "@sveltejs/vite-plugin-svelte": "^5.1.1",
        "@tailwindcss/postcss": "^4.1.16",
        "@tailwindcss/vite": "^4.1.17",
        "@types/node": "20.19.9",
        "@types/react": "^19.2.2",
        "@types/react-dom": "^19.2.2",
        "@typescript-eslint/parser": "^8.40.0",
        "@vitejs/plugin-react": "^5.1.0",
        "@vitejs/plugin-vue": "^6.0.1",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.0.0",
        "autoprefixer": "^10.4.21",
        "eslint": "^9.8.0",
        "eslint-config-prettier": "^10.0.0",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-svelte": "^2.35.0",
        "postcss": "^8.5.6",
        "prettier": "^2.6.2",
        "rimraf": "^5.0.5",
        "svelte": "^5.42.2",
        "tailwindcss": "^4.0.0",
        "tslib": "^2.3.0",
        "turbo": "^2.7.2",
        "typescript": "~5.9.2",
        "typescript-eslint": "^8.40.0",
        "vite": "^7.0.0",
        "vitest": "^3.0.0"
    },
    "dependencies": {
        "lit": "^3.3.1",
        "open": "^10.1.0",
        "pinia": "^3.0.3"
    },
    "packageManager": "pnpm@10.26.0",
    "engines": {
        "node": ">=20"
    }
}